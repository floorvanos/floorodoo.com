<?xml version="1.0"?>
<odoo>
	<record id="bam_article_action" model="ir.actions.act_window">
		<field name="name">Articles</field>
		<field name="res_model">bam.article</field>
		<field name="view_mode">tree,form</field>
        <field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Write a new article
            </p>
        </field>
    </record>
	
	
	 <record id="bam_article_view_tree" model="ir.ui.view">
        <field name="name">bam.article.tree</field>
        <field name="model">bam.article</field>
        <field name="arch" type="xml">
            <tree string="Articles">
                <field name="name"/>
				<field name="state"/>
				<field name="publish_up"/>
            </tree>
        </field>
    </record>
	
	<record id="bam_article_view_form" model="ir.ui.view">
		<field name="name">bam.article.form</field>
		<field name="model">bam.article</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<field name="state" widget="statusbar"/>
				</header>
				<sheet>
					<div class="oe_button_box">
						<BUTTONS/>
					</div>
					<group>
						<group>
							<field name="name"/>
							<field name="introtext"/>
							<field name="bodytext"/>
						</group>
					</group>
					<notebook>
						<page string="Publishing">
							<group>
								<field name="type"/>
								<field name="publish_up"/>
								<field name="archive"/>
								<field name="trash"/>
								<field name="state"/>
								<field name="active"/>
								<field name="sequence"/>
							</group>
						</page>
						<page string="Preferences">
							<group>
								<field name="show_title"/>
								<field name="show_date"/>
								<field name="show_author"/>
								<field name="show_introtext"/>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
	
</odoo>