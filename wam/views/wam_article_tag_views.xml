<?xml version="1.0"?>
<odoo>
    <record id="wam_article_tag_action" model="ir.actions.act_window">
        <field name="name">Article Tags</field>
        <field name="res_model">wam.article.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="article_tag_view_tree" model="ir.ui.view">
        <field name="name">wam.article.tag.tree</field>
        <field name="model">wam.article.tag</field>
        <field name="arch" type="xml">
            <tree string="Article Tags">
                <field name="published"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="article_tag_view_form" model="ir.ui.view">
        <field name="name">Article Tag Details</field>
        <field name="model">wam.article.tag</field>
        <field name="arch" type="xml">
            <form string="Article Tag">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                        <field name="active" invisible="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
