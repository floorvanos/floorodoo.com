<?xml version="1.0"?>
<odoo>
    <data>
        <!-- WAM.ARTICLE.TAG.CATEGORY VIEWS -->
        <!-- TREE -->
        <record id="wam_article_tag_category_view_tree" model="ir.ui.view">
            <field name="name">wam.article.tag.category.view.tree</field>
            <field name="model">wam.article.tag.category</field>
            <field name="arch" type="xml">
                <tree string="Article Category">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <record id="wam_article_tag_category_view_form" model="ir.ui.view">
            <field name="name">wam.article.tag.category.view.form</field>
            <field name="model">wam.article.tag.category</field>
            <field name="arch" type="xml">
                <form string="Article Category">
                    <sheet>
                        <div class="oe_title">
                            <h1><field nolabel="1" name="name"/></h1>
                        </div>
                        <group>
                            <field name="tag_ids" context="{'default_category_id': active_id}">
                                <tree string="Tags" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="color" widget="color_picker"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="wam_article_tag_category_action_tree" model="ir.actions.act_window" >
            <field name="name">Article Tags Categories</field>
            <field name="res_model">wam.article.tag.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- WAM.ARTICLE.TAG VIEWS -->
        <!-- TREE -->
        <record id="wam_Article_tag_view_tree" model="ir.ui.view">
            <field name="name">wam.article.tag.view.tree</field>
            <field name="model">wam.article.tag</field>
            <field name="arch" type="xml">
                <tree string="Article Tags Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <record id="wam_article_tag_view_form" model="ir.ui.view">
            <field name="name">wam.article.tag.view.form</field>
            <field name="model">wam.article.tag</field>
            <field name="arch" type="xml">
                <form string="Article Category Tag">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="category_id" widget="many2one"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- MENU -->
        <record id="menu_wam_article_tag_category" model="ir.ui.menu">
            <field name="action" ref="wam.article.wam_article_tag_category_action_tree"/>
        </record>
    </data>
</odoo>
