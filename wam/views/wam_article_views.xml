<?xml version="1.0"?>
<odoo>
    <record id="wam_article_action" model="ir.actions.act_window">
        <field name="name">Articles</field>
        <field name="res_model">wam.article</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="article_view_tree" model="ir.ui.view">
        <field name="name">wam.article.tree</field>
        <field name="model">wam.article</field>
        <field name="arch" type="xml">
            <tree string="Articles">
                <field name="published"/>
                <field name="name"/>
				<field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="article_view_form" model="ir.ui.view">
        <field name="name">Article details</field>
        <field name="model">wam.article</field>
        <field name="arch" type="xml">
            <form string="Article">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16" placeholder="De titel"/>
                        </h1>
			<group>
				<notebook>
					<page string="Content">	
						<group>
							<group name="article">
								<field name="intro_text" placeholder="Intro tekst"/>
								<field name="main_text" placeholder="Hoofd tekst"/>
							</group>
						</group>
					</page>
					<page string="publishing">
						<group>
							<group>
								<field name="category_id"/>
								<field name="tag_ids" widget="many2many_tags"/>
								<field name="author_id"/>
								<field name="publish_up"/>
								<field name="publish_down"/>
							</group>
						</group>
					</page>
					<page string="settings">
					</page>
				</notebook>
			</group>
                        <field name="active" invisible="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
	
	<record id="article_view_filter" model="ir.ui.view">
            <field name="name">wam.article.select</field>
            <field name="model">wam.article</field>
            <field name="arch" type="xml">
                <search string="Search Articles">
               		<field name="name"/>
					<field name="category_id"/>
					<filter string="Published" name="published" domain="[('published', '=', True)]"/>
					<filter string="Unpublished" name="unpublished" domain="[('published', '=', False)]"/>
                </search>
            </field>
        </record>

</odoo>
