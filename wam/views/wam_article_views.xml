<?xml version="1.0"?>
<odoo>
    <record id="wam_article_action" model="ir.actions.act_window">
        <field name="name">wam.article.form</field>
        <field name="res_model">wam.article</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="article_view_tree" model="ir.ui.view">
        <field name="name">wam.article.tree</field>
        <field name="model">wam.article</field>
        <field name="arch" type="xml">
            <tree string="Articles">
                <field name="published"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="article_view_form" model="ir.ui.view">
        <field name="name">wam.article.form</field>
        <field name="model">wam.article</field>
        <field name="arch" type="xml">
            <form string="Article">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16" placeholder="De titel"/>
                        </h1>
						<group>
							<group name="article">
								<field name="intro_text" placeholder="Intro tekst"/>
								<field name="main_text" placeholder="Hoofd tekst"/>
							</group>
							<notebook>
								<page string="publishing">
								<group>
									<group>
										<field name="author_id"/>
										<field name="published"/>
										<field name="publish_up"/>
										<field name="publish_down"/>
										</group>
									</group>
								</page>
								<page string="settings">
								</page>
							</notebook>
						</group>
                        <field name="active" invisible="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
